{
    "compilerOptions": {
        "module": "CommonJS",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "typeRoots": ["@types/*.d.ts"]
    },
    "ts-node": {
        "files": true,
        "require": ["tsconfig-paths/register"]
    },
    "exclude": ["node_modules"],
    "include": ["./**/*.d.ts", "./**/*.ts", "./**/*.tsx"],
    "extends": "./tsconfig.paths.json"
}
